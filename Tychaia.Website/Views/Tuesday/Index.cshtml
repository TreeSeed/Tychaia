@* Generator: MvcView *@
@* VirtualPath: ~/Views/Tuesday/Index.cshtml *@
@model Tychaia.Website.ViewModels.TychaiaTuesdayViewModel
@using Tychaia.Website;
@{
    ViewBag.Title = "Tychaia Tuesdays";
}

@if (Model.Issue == null) 
{
	<h2>
	    Issue Not Found!
	    <span class="actions">(<a href="http://code.redpointsoftware.com.au/phame/blog/feed/2/">Atom Feed</a>)</span>
	</h2>
	<div class="block phame">
		<p>Sorry, but this issue of Tychaia Tuesdays could not be found.</p>
	</div>
}
else
{
	<h2>
	    @Model.Issue.Title
	    <span class="actions">(
            @if (Model.Issue.Previous != null)
            {
                <text>
                <a href="/tuesday/@Model.Issue.Previous">Previous Issue</a> &bull; 
                </text>
            }
            @if (Model.Issue.Next != null)
            {
                <text>
                <a href="/tuesday/@Model.Issue.Next">Next Issue</a> &bull; 
                </text>
            }
            <a href="http://code.redpointsoftware.com.au/phame/blog/feed/2/">Atom Feed</a>
        )</span>
	</h2>
	<div class="block phame">
		@Html.Raw(Model.Issue.Content)
	</div>
	<div class="block">
	
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'tychaiatuesdays'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    
	</div>
}
